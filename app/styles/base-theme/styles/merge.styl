.current-conflict-header {
  background-color: rgba(64, 200, 174, 0.5);
}

.incoming-conflict-header {
  background-color: rgba(64, 166, 255, 0.5);
}

.incoming-conflict-content {
  background-color: rgba(64, 166, 255, 0.2);
}

.current-conflict-content {
  background-color: rgba(64, 200, 174, 0.2);
}

.incoming-conflict-header-after-decoration {
  &::after {
    content: "传入的更改";
    color: $text-color;
    padding-left: 10px;
  }
}

.current-conflict-header-after-decoration {
  &::after {
    content: "当前更改";
    color: $text-color;
    padding-left: 10px;
  }
}

.conflict-header-widget {
  &>a {
    font-size: 12px;
    color: $text-color;
    text-decoration: none;
    cursor: pointer;
    &:hover {
      color: rgba(64, 166, 255, 0.5);
      text-decoration: underline; 
    } 
  }  
}
