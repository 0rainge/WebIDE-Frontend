.CodeMirror-scroll {
  padding-bottom: 18px;
}

.CodeMirror pre {
  font-family: Consolas, "Source Code Pro", Consolas, "Courier New", Menlo, Monaco, "DejaVu Sans Mono", monospace;
  line-height: 1.3;
}

.CodeMirror .CodeMirror-linenumber {
  line-height: 1.3;
}

.CodeMirror .breakpoint-highlight {
  background: red;  
}

.status-bar-editor-widgets {
  display: flex;
  align-items: stretch;
  .editor-widget {
    display: flex;
    align-items: center;
    padding: 0 8px;
  }
}

.mode-widget {
  display: flex;
  position: absolute;
  bottom: 24px;
  min-width: 200px;
  right: 1px;
  flex-direction: column;
  z-index: 201;

  ul {
    max-height: 200px;
    overflow: auto;
  }
}

.image-editor-loading {
  .fa-spinner {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: $text-color;
  }
}

.htmlPreview {
  overflow: hidden;
  position: relative;
  .preview-iframe-msk {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
  }
  iframe {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
    border: 0;
    background-color: white;
  }
}

#typoMenu {
  position:absolute;
  z-index:3;
  border-radius:4px;
  background-color:#f7f7f7;
}
#typoMenu .typoItem:hover,#typoMenu .typoSugItem:hover {
  cursor:pointer;
  background-color:#f0f0f0;
}
#typoMenu .typoItemContainer {
  display:inline-block;
  vertical-align:top;
  text-align:center;
}
#typoMenu .typoItem{
  padding:5px 10px 5px 15px;
  transition:all .2s;
}
#typoMenu .typoItem:hover+.typoSugMenu{
  display:inline-block;
}
#typoMenu .typoSugMenu{
  display:none;
  margin-right:10px;
  padding:5px 10px;
  -webkit-transition: all;
  -moz-transition:all .3s ease-out;
  -o-transition:all .3s ease-out;
  transition:all .3s ease-out;
}
#typoMenu .typoSugMenu:hover{
  display:inline-block!important;

}

.CodeMirror .cm-typo:not(.cm-url):not(.cm-comment):not(.cm-tag):not(.cm-word) {
  border-bottom: 1px solid yellow;
  background: none;
}