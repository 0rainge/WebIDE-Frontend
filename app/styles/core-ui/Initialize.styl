.monkey.splash-logo {
  vertical-align: top;
  margin-top: -8px;
  height: 195px;
  opacity: .618;
  font-size: 226px;
  background: url('~static/logo.svg') no-repeat center;
}

.coding-loading {
  width: 556px;
  height: 180px;
  background: url('~static/loading-logo.svg') -16px -40px no-repeat;
  margin: 0 auto;
}

.initialize-container {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;

  .loading-info {
    margin-top: 20px;
    font-size: 16px;
    &.error {
      color: red;
    }
  }
  .loading-error {
    margin-top: 20px;
    color: red;
    .fa-exclamation-triangle {
      color: red;
      margin-right: 6px;
    }
  }
  .request-info {
    margin-top: 20px;
  }
}

.login-container {
  background: #00000066;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  display:flex;
  align-items:center;
  justify-content:center;

  .monkey.splash-logo {
    vertical-align: top;
    margin-top: -8px;
    height: 100px;
    opacity: 1;
    font-size: 126px;
    background: url('~static/logo.svg') no-repeat center;
    background-size: 200px 200px;
  }

  .login-info {
    padding-bottom: 40px;
    h1 {
      font-size: 20px;
      font-weight: bold;
      margin: 0;
      padding-bottom: 4px;
    }
    h2 {
      font-size: 14px;
      font-weight: normal;
      margin: 0;
    }
  }

  .login-panel {
    border: 1px solid #ddd;
    padding: 50px;
    border-radius: 6px;
    background: #FFF;
    box-shadow: 0 4px 20px 1px rgba(0, 0, 0, .3);
    .login-btn {
      margin-bottom: 10px;
      button {
        width: 100%;
      }  
    }
  }
}