.plugin-upload {
    .title {
        font-size: 16px;
    }
    .title-desc {
        margin: 20px 0;
        font-size: 12px;
    }
    .form {
        max-height: 600px;
        padding: 20px 10px 0;
        margin: 20px auto 0;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        overflow-y: auto;
        .dot {
            margin-right: 2px;
            color: #f33;
        }
        .plugin-tag-box {
            display: flex;
            align-items: center;
            width: 100%;
            height: 34px;
            padding: 0 5px;
            font-size: 14px;
            line-height: 1.428571429;
            color: #555;
            background-color: #eee;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
            .plugin-tag {
                display: flex;
                align-items: center;
                margin: 0 2px;
                border-radius: 2px;
                background-color: #ccc;
                .tag-name {
                    padding: 2px 10px;
                }
                .tag-close {
                    width: 20px;
                    height: 15px;
                    line-height: 15px;
                    text-align: center;
                    border-left: 1px solid #999;
                    cursor: pointer;
                }
            }
        }
        .upload-logo {
            display: flex;
            justify-content: space-between;
            .upload-item {
                width: 48%;
                .logo-wrap {
                    width: 290px;
                    height: 150px;
                    margin-top: 10px;
                    border-radius: 4px;
                    overflow: hidden;
                    background-color: #eee;
                    img {
                        width: 100%;
                        height: 100%;
                    }
                }
                .big-wrap {
                    width: 290px;
                    height: 170px;
                }
                .small-wrap {
                    width: 170px;
                    height: 170px;
                }
                .logo-tip {
                    margin-top: 10px;
                    font-size: 12px;
                    color: #f00;
                }
            }
        }
    }
    .form::-webkit-scrollbar {
        display: block;
        width: 2px;
        height: 2px;
    }
    .form::-webkit-scrollbar-thumb {
        border-radius: 2px;
        box-shadow: inset 0 0 6px rgba(0,0,0,.3);
        background-color: #888;
    }
    .control {
        display: flex;
        justify-content: flex-end;
        padding: 20px 0 10px;
        button {
            margin: 0 5px;
        }
    }
}
