.user {
		// display: none;
		float: right;
		.user-info {
      position: relative;
			display: flex;
      font-size: 14px;
      color: #FFFFFF;
      letter-spacing: 0;
      text-align: right;
			.avatar {
				width: 36px;
				height: 36px;
				border-radius: 50%;
				border: 1px solid #FFF;
			}
			.dropdown {
				button {
					margin-top: 2px;
					border: none;
					background: none;
					color: #FFF;
					font-size: 14px;
					outline: none;
					box-shadow: none;
          padding: 6px 10px;
					.caret {
						border-top: 4px dashed;
						border-top-style: solid \9;
						margin-left: 10px;
					}
				}
				.dropdown-menu {
					right: 0;
					left: initial;

					.fa, .icon {
						color: #999999;
						margin-right: 10px;
						width: 14px;
					}
				}
        &.open {
          .dropdown-menu {
            display: block;  
          }
        }
        .dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
          text-decoration: none;
          color: #262626;
          background-color: #f5f5f5;
        }
			}
		}
		.button {
			display: inline-block;
			padding: 0 2em;
			text-transform: none;
			line-height: 2em;
			height: 2em;
			background-image: none;
			-webkit-border-radius: 2em;
			-moz-border-radius: 2em;
			-ms-border-radius: 2em;
			-o-border-radius: 2em;
			border-radius: 2em;
			border: none;
			outline: 0;
			cursor: pointer;
			background: #FFF;
			margin: 5px;
			color: #666;
			font-size: 14px;
			line-height: 26px;
			text-decoration: none;

      
		}

    .btn-default:active:hover, .btn-default.active:hover, .open > .dropdown-toggle.btn-default:hover, .btn-default:active:focus, .btn-default.active:focus, .open > .dropdown-toggle.btn-default:focus, .btn-default:active.focus, .btn-default.active.focus, .open > .dropdown-toggle.btn-default.focus {
      color: #FFF;
      background: none;
      border: none;
    }

    .caret {
      display: inline-block;
      width: 0;
      height: 0;
      margin-left: 10px;
      vertical-align: middle;
      border-top: 4px dashed;
      border-top: 4px solid \9;
      border-right: 4px solid transparent;
      border-left: 4px solid transparent;
    }

    .dropdown-menu {
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 1000;
      display: none;
      float: left;
      min-width: 160px;
      padding: 5px 0;
      margin: 2px 0 0;
      list-style: none;
      font-size: 14px;
      text-align: left;
      background-color: #fff;
      border: 1px solid #ccc;
      border: 1px solid rgba(0, 0, 0, 0.15);
      border-radius: 4px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
      background-clip: padding-box;
      & > li > a {
          display: block;
          padding: 3px 20px;
          clear: both;
          font-weight: normal;
          line-height: 1.42857143;
          color: #333333;
          white-space: nowrap;
          text-decoration: none;
      }
    }
	}