.menu-bar {
  background-color: $base-top-menu-bar-background;
  border-color: $base-border-color;
  color: $text-color;
}

.status-bar {
  border-color: $base-border-color;
  background-color: $base-top-menu-bar-background;
  color: $text-color;

  .git-branch-widget .widget-header {
    background-color: $base-background-color;
    color: $text-color;
  }
  
  .status-progress {
    span {
      background-image: linear-gradient(135deg, rgba(255, 255, 255, .15) 25%, transparent 25%,
        transparent 50%, rgba(255, 255, 255, .15) 50%, rgba(255, 255, 255, .15) 75%,
        transparent 75%, transparent);
    }
  }
}

.breadcrumbs {
  background-color: $menu-background-color;
  border-color: $base-border-color;
  color: $text-color;
  .crumb {
    background-color: $menu-background-color;
    &:before {
      border-left-color: $base-border-color;
    }
    &:after {
      border-left-color: $menu-background-color;
    }
  }
}

.side-bar {
  color: $text-color;
  .side-bar-label:hover {
    background-color: $tab-background-color-hover;
  }
  .side-bar-label.active {
    background-color: $tab-background-color-active;
  }
}
