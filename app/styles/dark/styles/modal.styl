.modal-container {
  .modal {
    background: $base-top-menu-bar-background;
    color: $text-color;
    .settings-header, .settings-header .tab-bar-header, .git-commit-files {
      border-color: $menu-border-color;
    }

    .settings-view {
      .modal-ops {
        border-color: $menu-border-color;
      }
    }
  }
}

.git-unstash-container .stash-list {
  border-color: $menu-border-color;
  background: $base-background-color;
}

.project-type-item {
  display: flex;
  justify-content: space-between;
  padding: 0px 15px;
  border-radius: 2px;
  cursor: pointer;
  &:hover {
    background-color: $tab-background-color-hover;
  }
  &>p {
    margin: 10px 0px;
  }

  .project-src {
    text-align: left;
    width: 300px;
    max-width: 300px;
    font-size: 12px;
    color: $button-border-color;
  }

  .project-type {
    font-size: 14px;
  }
}
