.modal-container {
  .modal {
    background: $base-top-menu-bar-background;
    color: $text-color;
    .settings-header, .settings-header .tab-bar-header, .git-commit-files {
      border-color: $menu-border-color;
    }

    .settings-view {
      .modal-ops {
        border-color: $menu-border-color;
      }
    }
  }
}

.git-unstash-container .stash-list {
  border-color: $menu-border-color;
  background: $base-background-color;
}

.project-type-item {
  justify-content: space-between;
  border-radius: 2px;
  cursor: pointer;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0 20px;
  margin-bottom: 3px;
  background-color: #444;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 36px;
  line-height: 36px;
  &:last-child {
    margin-bottom: 0;
  }
  .icon {
    margin-right: 8px;
  }
  .highlight {
    color: $ui-site-color-2;
  }
  &:hover {
    background-color: $ui-site-color-2;
  }
  &>p {
    margin: 10px 0px;
  }

  .project-src {
    text-align: left;
    width: 300px;
    max-width: 300px;
    font-size: 12px;
    color: $button-border-color;
  }

  .project-type {
    font-size: 14px;
  }
}
