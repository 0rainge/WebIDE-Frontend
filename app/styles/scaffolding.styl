html {
  font-size: 10px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
  font-size: $font-size;
  font-family: $font-family;
  line-height: 1;
  color: $text-color;
  background-color: $base-background-color;
}

html, body, #root {
  width: 100vw;
  height: 100vh;
}

